<h1>Editing Recipe</h1>

<%= render 'form' %>

<h2>Ingredients</h2>
<ul>
  <% @recipe_ingredients.each do |inc| %>
    <li>
      <%= inc.ingredient %>
    </li>

  <% end %>
</ul>
<h2>Add Ingredients</h2>
<table class="table">
  <thead>
    <th>
      Ingredient
    </th>
    <th>
      Add
    </th>
  </thead>
  <tbody>
    <% @ingredients.each do |inc| %>
    <tr>
      <td>
        <%= inc %>
      </td>
      <td>
        <%= link_to '+', 'add/'+inc.id.to_s, method: :post %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Show', @recipe %> |
<%= link_to 'Back', recipes_path %>
